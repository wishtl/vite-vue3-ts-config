{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "paths": {
      "/@/*": [
        "src/*"
      ],
    },
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src",
  ]
}
